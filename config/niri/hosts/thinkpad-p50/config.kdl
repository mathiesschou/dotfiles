// Niri configuration

// Startup
spawn-at-startup "noctalia-shell"
spawn-at-startup "ghostty"

// Disable hotkey overlay on startup
hotkey-overlay {
    skip-at-startup
}

// Ghostty opens maximized
window-rule {
    match app-id="com.mitchellh.ghostty"
    open-maximized true
}

// Output/display settings
// Let niri auto-detect all outputs (including HDMI)
// Add specific output configurations here if needed, e.g.:
// output "HDMI-A-1" {
//     mode "1920x1080@60"
// }

// Window appearance
layout {
    gaps 4

    focus-ring {
        width 1.5
    }
    border {
        width 1.5
    }
}

window-rule {
    geometry-corner-radius 12
    clip-to-geometry true
    draw-border-with-background false
}

prefer-no-csd

// Input settings
input {
    keyboard {
        xkb {
            layout "us,dk"
            options "caps:ctrl_modifier,grp:ctrl_space_toggle"
        }
        repeat-delay 200
        repeat-rate 35
    }
    touchpad {
        natural-scroll
    }
    focus-follows-mouse
}

// Keybindings - using Super (Windows/Command key) as modifier
binds {
    // Help & Overview
    Super+Shift+Slash { show-hotkey-overlay; }
    Super+O { toggle-overview; }

    // Terminal
    Super+Return { spawn "ghostty"; }

    // Theme picker
    Super+Shift+T { spawn "/home/mathies/dotfiles/scripts/pick-theme.sh"; }

    // App launcher (noctalia)
    Super+D { spawn "noctalia-shell" "ipc" "call" "launcher" "toggle"; }

    // Browser
    Super+B { spawn "zen"; }

    // Notes
    Super+A { spawn "obsidian"; }

    // File manager
    Super+E { spawn "nautilus"; }

    // Close window
    Super+Q { close-window; }

    // Focus windows
    Super+H { focus-column-left; }
    Super+L { focus-column-right; }
    Super+N { focus-window-down; }
    Super+P { focus-window-up; }

    // Move windows
    Super+Shift+H { move-column-left; }
    Super+Shift+L { move-column-right; }

    // Workspaces
    Super+J { focus-workspace-down; }
    Super+K { focus-workspace-up; }
    Super+Shift+J { move-column-to-workspace-down; }
    Super+Shift+K { move-column-to-workspace-up; }

    // Monitor navigation
    Super+Ctrl+H { focus-monitor-left; }
    Super+Ctrl+L { focus-monitor-right; }
    Super+Ctrl+N { focus-monitor-down; }
    Super+Ctrl+P { focus-monitor-up; }

    // Move windows between monitors
    Super+Ctrl+Shift+H { move-column-to-monitor-left; }
    Super+Ctrl+Shift+L { move-column-to-monitor-right; }
    Super+Ctrl+Shift+N { move-column-to-monitor-down; }
    Super+Ctrl+Shift+P { move-column-to-monitor-up; }

    // Move window to workspace
    Super+Shift+1 { move-column-to-workspace 1; }
    Super+Shift+2 { move-column-to-workspace 2; }
    Super+Shift+3 { move-column-to-workspace 3; }
    Super+Shift+4 { move-column-to-workspace 4; }
    Super+Shift+5 { move-column-to-workspace 5; }

    // Layout
    Super+F { maximize-column; }
    Super+Shift+F { fullscreen-window; }
    Super+C { consume-window-into-column; }
    Super+Shift+C { expel-window-from-column; }

    // Resize windows
    Super+Minus { set-column-width "-10%"; }
    Super+Equal { set-column-width "+10%"; }
    Super+Shift+Minus { set-window-height "-10%"; }
    Super+Shift+Equal { set-window-height "+10%"; }

    // Screenshots
    Super+S { screenshot; }
    Super+Shift+S { screenshot-window; }

    // Exit
    Super+Shift+E { quit; }

    // Brightness control (F5/F6 on ThinkPad P50)
    XF86MonBrightnessDown { spawn "brightnessctl" "set" "5%-"; }
    XF86MonBrightnessUp { spawn "brightnessctl" "set" "5%+"; }

    // Volume control (F1/F2/F3 on ThinkPad P50)
    XF86AudioMute { spawn "wpctl" "set-mute" "@DEFAULT_AUDIO_SINK@" "toggle"; }
    XF86AudioLowerVolume { spawn "wpctl" "set-volume" "@DEFAULT_AUDIO_SINK@" "5%-"; }
    XF86AudioRaiseVolume { spawn "wpctl" "set-volume" "@DEFAULT_AUDIO_SINK@" "5%+"; }
    XF86AudioMicMute { spawn "wpctl" "set-mute" "@DEFAULT_AUDIO_SOURCE@" "toggle"; }
}
